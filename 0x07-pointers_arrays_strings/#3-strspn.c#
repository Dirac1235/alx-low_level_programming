			n = 1;
/			if (*(s + i) == *(accept + j))
/			zzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzzxuzzzzzzzzzz				count++;
				a = 1;
			}

			if (a == 0)
				n = 0;
		}
